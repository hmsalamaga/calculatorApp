<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="6">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/ButtonSin"
            style="@style/FunctionalButton"
            android:gravity="center"
            android:onClick="onSinClicked"
            android:text="Sin"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ButtonCos"
            style="@style/FunctionalButton"
            android:gravity="center"
            android:onClick="onCosClicked"
            android:text="Cos"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ButtonTan"
            style="@style/FunctionalButton"
            android:gravity="center"
            android:onClick="onTanClicked"
            android:text="Tan"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ButtonPerc"
            style="@style/FunctionalButton"
            android:gravity="center"
            android:onClick="onPercClicked"
            android:text="%"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/ButtonLn"
            style="@style/FunctionalButton"
            android:gravity="center"
            android:onClick="onLnClicked"
            android:text="Ln"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ButtonLog"
            style="@style/FunctionalButton"
            android:gravity="center"
            android:onClick="onLogClicked"
            android:text="Log"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ButtonSqrt"
            style="@style/FunctionalButton"
            android:gravity="center"
            android:onClick="onSqrtClicked"
            android:text="âˆš"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ButtonPow"
            style="@style/FunctionalButton"
            android:gravity="center"
            android:onClick="onPowClicked"
            android:text="^"
            android:textStyle="bold"/>

    </LinearLayout>

    <include
        layout="@layout/simple_calc_keyboard"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"/>

</LinearLayout>

